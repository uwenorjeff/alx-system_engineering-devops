#!/usr/bin/env bash
# Install and configure HAProxy on lb-01 server
sudo apt-get update
sudo apt-get -y install haproxy
sudo chown -R $USER:$USER /etc/haproxy
sudo echo "
frontend http_front
  bind *:80
  mode http
  default_backend http_back
backend http_back
   balance roundrobin
   server 76640-web-01 54.157.167.17:80 check
   server 76640-lb-01 54.159.26.113:80 check" >> /etc/haproxy/haproxy.cfg
sudo service haproxy restart
