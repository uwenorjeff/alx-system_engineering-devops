global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend uwenor-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/uwenor.tech.pem
	http-request redirect scheme https code 301 unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend uwenor-tech-backend

backend th3gr00t-tech-backend
	balance roundrobin
	server 76640-web-01 54.157.167.17:80 check
	server 76640-web-02 54.160.85.51:80 check
